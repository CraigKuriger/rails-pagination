
<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-12 text-right">
      <%= link_to 'New Cat', new_cat_path, {class: "btn btn-primary text-light"} %>
    </div>
  </div>
  <br/>
  <div class="row">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Registry</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cats.each do |cat| %>
        <tr>
          <td><%= cat.name %></td>
          <td><%= cat.breed %></td>
          <td><%= cat.registry %></td>
          <td><%= link_to 'Show', cat %></td>
          <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
          <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <div class="row">
    <div class="col-4 text-left">
      <%= link_to_if @page > 1, "Previous", cats_path(page: @page - 1), {class: "btn btn-secondary text-light"} %>
    </div>

    <div class="col-4 text-center">
      <h4><%= @page %></h4>
    </div>

    <div class="col-4 text-right">
      <%= link_to_if !@last_page, "Next", cats_path(page: @page + 1), {class: "btn btn-secondary text-light"} %>
    </div>
  </div>
</div>
